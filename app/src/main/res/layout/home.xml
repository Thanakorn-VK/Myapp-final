<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center|top"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="380dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/logochefmate" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/logo1"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:background="@drawable/logo2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="วัตถุดิบในตู้เย็น"
                    android:textColor="@color/colorWrite"
                    android:textSize="20dp">

                </TextView>
            </LinearLayout>


            <TableRow
                android:layout_width="20dp"
                android:layout_height="match_parent">

            </TableRow>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/logo2"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:background="@drawable/logo1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เลือกวัตถุดิบ"
                    android:textColor="@color/colorWrite"
                    android:textSize="20dp">

                </TextView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
            <Button
                android:id="@+id/logo3"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/logo4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="รายการโปรด"
                android:textSize="20dp"
                android:textColor="@color/colorWrite">

            </TextView>
        </LinearLayout>


            <TableRow
                android:layout_width="20dp"
                android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/logo4"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/logo3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="สูตรอาหาร"
                android:textSize="20dp"
                android:textColor="@color/colorWrite">
            </TextView>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>